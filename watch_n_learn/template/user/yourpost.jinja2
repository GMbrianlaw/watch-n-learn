{% extends "base.jinja2" %}

{% block title %}

    {% if post is none() %}

        <title>Post Not Found</title>

    {% else %}

        <title>{{ post.user.username }} - {{ post.title }}</title>

    {% endif %}

{% endblock title %}

{% block main %}

    {% if post is none() %}

        <main>

            <h2>Post doesn't exist</h2>

        </main>

    {% elif post.isdeleted is true() %}

        <main>

            <h2>Post is Deleted</h2>

        </main>

    {% else %}

        <main>

            <h2>{{ post.title }}</h2>

            <b>
                By:
                <a href="/user/{{ post.user.username }}">
                    {{ post.user.username }}
                </a>
            </b>

            <b>
                <a href="/delete/{{ post.id_ }}">Delete Post</a>
            </b>

            <p>{{ post.content }}</p>

        </main>

    {% endif %}


{% endblock main %}
