{% extends "base.jinja2" %}

{% block css %}

    <link rel="stylesheet" href="/static/css/user/post.css">

{% endblock css %}

{% block title %}

    <title>Post</title>

{% endblock title %}

{% block main %}

    <main>

        <link rel="stylesheet" href="/static/css/user/explore.css">

        <h2>New Post</h2>

        <br>

        <form action="/internal/post" method="post">
            <input name="title" placeholder="Title" size="40">
            <br>
            <textarea
                name="content" placeholder="Write your post ..." rows="18"
                cols="60"
            ></textarea>
            <br>
            <br>
            <button type="submit">Post</button>
        </form>

    </main>

{% endblock main %}
