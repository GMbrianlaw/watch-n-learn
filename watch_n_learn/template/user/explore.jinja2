{% extends "base.jinja2" %}

{% block css %}

    <link rel="stylesheet" href="/static/css/user/explore.css">

{% endblock css %}

{% block title %}

    <title>Explore</title>

{% endblock title %}

{% block main %}

    <main>

        <h2>Explore</h2>

        <br>

        <h3>Recent Posts:</h3>

        <br>

        <section id="recent">
            {% for post in recent_posts %}
                <a href="/view/{{ post.id_ }}">
                    {% if post.title|length() > 27 %}
                        {{ post.title[:24] }}... - {{ post.user.username }}
                    {% else %}
                        {{ post.title }} - {{ post.user.username }}
                    {% endif %}
                </a>
            {% endfor %}
        </section>

    </main>

{% endblock main %}