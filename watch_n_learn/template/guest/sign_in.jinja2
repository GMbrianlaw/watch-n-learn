{% extends "base.jinja2" %}

{% block css %}

    <link rel="stylesheet" href="/static/css/guest/sign_in.css">

{% endblock css %}

{% block title %}

    <title>Sign In</title>

{% endblock title %}

{% block main %}

    <main>

        <h2>Sign In</h2>

        <br>

        <form action="/internal/sign-in" method="post" autocomplete="off">
            <input type="text" name="username" placeholder="Username" size="40">
            <br>
            <input
                type="password" name="password" placeholder="Password" size="40"
            >
            <br>
            <button type="submit">Login</button>
        </form>

    </main>

{% endblock main %}
